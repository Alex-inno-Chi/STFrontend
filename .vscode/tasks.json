{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "ESLint: Check Current File",
      "type": "shell",
      "command": "pnpm",
      "args": ["eslint", "${file}"],
      "problemMatcher": ["$eslint-stylish"],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    }
  ]
}
